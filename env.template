CELERY_RESULT_BACKEND=redis://redis:6379/1

# ---- PostgreSQL Database ----------------------------------
DATABASE_URL=postgresql://mailer_user:mailer_password@postgres:5432/celery_mailer
POSTGRES_DB=celery_mailer
POSTGRES_USER=mailer_user
